<% title "マイページ" %>
<%= javascript_include_tag "tweets" %>
<div id="image_wrapper" class="left">
<%= image_tag(@user.image_url, :size=>"48x48", :alt=>"User Icon") %>
</div>
<%= render :partial=>"tweets/form" %>
<div id="map" class="clear">
  <%= render :partial=>"map" %>
</div>
<div id="friends_status">
<h3>友達のぼっち飯</h3>
<% if @user.friends.count > 0 -%>
  <ul>
  <% @friend_tweets.each do |t| -%>
    <li class="tweet">
      <%= t.user.nickname %> : <%= t.content %>
      <span class="location">@ <%= t.location.address if t.location -%></span>
      <%= link_to "DM", message_tweet_path(t) if t.user != current_user %>
      <span class="time">(<%= t.time %>)</span></li>
  <% end -%>
  </ul>
<% else %>
  友達がいません。
<% end %>
</div>
<div id="my_status">
<h3>最近のぼっち飯</h3>
<% if @tweets.count>0 -%>
  <ul>
  <% @tweets.each do |t| -%>
    <li class="tweet"><%= t.content -%>
      <span class="location">@ <%= t.location.address if t.location -%></span>
      <span class="time">(<%= t.time %>)</span></li>
  <% end -%>
  </ul>
<% else %>
  最近はぼっち飯してません。
<% end %>
</div>
